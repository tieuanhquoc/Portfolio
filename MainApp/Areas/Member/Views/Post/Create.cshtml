@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model MainApp.Models.PostModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="contact-section active">
    <h1 class="project-heading">Post</h1>
    <div class="row" style="width:80%">
        <div class="col-md-4">
            <form asp-action="Create" class="contact-form" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Note" class="control-label"></label>
                    <input asp-for="Note" class="form-control" />
                    <span asp-validation-for="Note" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="" class="control-label"></label>
                    <div class="custom-file">
                        <input asp-for="" class="custom-file-input" id="customFile" type="file" multiple>
                        <label class="custom-file-label" for="customFile">Choose file</label>
                    </div>
                    <span asp-validation-for="Images" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
